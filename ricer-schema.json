{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/config.schema.json",
  "title": "Config",
  "description": "Root configuration object",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the configuration"
    },
    "description": {
      "type": "string",
      "description": "A description of the configuration"
    },
    "configs": {
      "type": "array",
      "description": "List of file configurations",
      "items": {
        "$ref": "#/$defs/File"
      }
    }
  },
  "required": [
    "name",
    "description",
    "configs"
  ],
  "additionalProperties": false,
  "$defs": {
    "File": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string",
          "description": "The target path for the file"
        },
        "symlinkLocation": {
          "type": "string",
          "description": "The location where the symlink should be created"
        },
        "deleteFiles": {
          "type": "array",
          "description": "List of locations to delete before applying the file",
          "items": {
            "$ref": "#/$defs/DeleteLocation"
          }
        },
        "content": {
          "type": "string",
          "description": "The content of the file"
        }
      },
      "required": [
        "path",
        "symlinkLocation",
        "deleteFiles",
        "content",
        "actions"
      ],
      "additionalProperties": false
    },
    "DeleteLocation": {
      "type": "string",
      "enum": [
        "TARGET_PARENT_LOCATION",
        "TARGET_LOCATION",
        "SYMLINK_PARENT_LOCATION",
        "SYMLINK_LOCATION"
      ],
      "description": "Enum specifying which location to delete"
    }
  }
}